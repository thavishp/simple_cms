<% @page_title  = "Users" %>

<div class="users index">
	<%= link_to("<< Back to Main Menu", {controller: 'access', action: 'index'}, class: 'back-link') %>

	<h2>Users</h2>
	<%=  %>
	<%= link_to(image_tag('plus_sign.png', size: '11x11', alt: '+') + " Add New User", {action: 'new'}, :class => 'action new') %>


	<div><%=  pluralize(@users.size, 'user') %> found</div>
	<table class="listing" summary="User list">
		<tr class="header">
			<th>Name</th>
			<th>Email</th>
			<th>Username</th>
			<th>Actions</th>
		</tr>
		<% @users.each do |user| %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><%= user.name %></td>
			<td><%= mail_to(user.email) %></td>
			<td><%= user.username %></td>
			<td class="actions">
				<%= link_to("Edit", {action: 'edit', id: user.id}, :class => 'action edit') %>
				<%= link_to("Delete", {action: 'delete', id: user.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>